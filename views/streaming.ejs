<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Streaming</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/streaming.js" defer></script>
</head>
<body>
    <header>
        <h1>Streaming</h1>
        <a href="/" class="back-link">Back to Player</a>
    </header>
    <main>
        <section id="broadcast-section">
            <h2>Broadcast Audio</h2>
            <label for="broadcast-name">Broadcast Name:</label>
            <input type="text" id="broadcast-name" required>
            <label for="audio-source">Select Audio Source:</label>
            <select id="audio-source">
                <option value="microphone">Microphone</option>
                <option value="file">File</option>
            </select>
            <input type="file" id="audio-file" style="display:none;" accept="audio/*">
            <button id="start-broadcast">Start Broadcast</button>
            <button id="stop-broadcast" style="display:none;">Stop Broadcast</button>
        </section>
        <section id="listener-section">
            <h2>Listen to Broadcast</h2>
            <ul id="broadcast-list"></ul>
            <audio id="listener-audio" controls></audio>
            <button id="listen-btn" style="display:none;">Listen to Broadcast</button>
        </section>
    </main>
</body>
</html>